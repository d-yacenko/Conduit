<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="ru.itx.conduit.ui.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/account"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toAccount"
            android:src="@drawable/ic_book_open_black_36dp" />

        <ImageButton
            android:id="@+id/group"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toGroup"
            android:src="@drawable/ic_human_male_female_black_36dp" />

        <ImageButton
            android:id="@+id/student"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toStudent"
            android:src="@drawable/ic_human_child_black_36dp" />

        <ImageButton
            android:id="@+id/security"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toSecurity"
            android:src="@drawable/ic_key_change_black_36dp" />
        
       
        <ImageButton
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toExchange"
            android:src="@drawable/ic_repeat_black_36dp" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toHelp"
            android:src="@drawable/ic_help_black_36dp" />
        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toExit"
            android:src="@drawable/ic_exit_to_app_black_36dp" />
        
    </LinearLayout>

    <FrameLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout><!-- From: file:/opt/java/Conduit1/app/src/main/res/layout/activity_main.xml -->